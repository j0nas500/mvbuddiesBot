{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./prod",
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "resolveJsonModule": true
    }
  }